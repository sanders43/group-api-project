<form class="container mt-5 new-log-form">

    <div class="form-group row">
        <label for="inputWeight" class="col-sm-3 col-form-label">Weight <span class="font-italic">(lbs.)</span>:</label>
        <div class="col-sm-9">
            <input type="number" class="form-control" id="inputWeight" placeholder="Weight (required)" min="75"
                max="600">
        </div>
    </div>

    <div class="form-group row">
        <label for="inputBPSys" class="col-sm-3 col-form-label">Blood Pressure <span
                class="font-italic">(Systolic)</span>:</label>
        <div class="col-sm-9">
            <input type="number" class="form-control" id="inputBPSys" placeholder="Blood Pressure (Systolic)" min="50"
                max="250">
        </div>
    </div>

    <div class="form-group row">
        <label for="inputBPDia" class="col-sm-3 col-form-label">Blood Pressure <span
                class="font-italic">(Diastolic)</span>:</label>
        <div class="col-sm-9">
            <input type="number" class="form-control" id="inputBPDia" placeholder="Blood Pressure (Diastolic)" min="25"
                max="200">
        </div>
    </div>

    <div class="form-group row">
        <label for="inputHR" class="col-sm-3 col-form-label">Resting Heart Rate <span
                class="font-italic">(bpm)</span>:</label>
        <div class="col-sm-9">
            <input type="number" class="form-control" id="inputHR" placeholder="Heart Rate" min="45" max="200">
        </div>
    </div>

    <div class="form-group row">
        <label for="inputExerciseDuration" class="col-sm-3 col-form-label">Exercise Duration <span
                class="font-italic">(mins)</span>:</label>
        <div class="col-sm-9">
            <input type="number" class="form-control" id="inputExerciseDuration" placeholder="Exercise Duration" min="1"
                max="360">
        </div>
    </div>

    <div class="form-group row">
        <label for="inputExerciseType" class="col-sm-3 col-form-label">Exercise Type:</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="inputExerciseType" placeholder="Exercise Type">
        </div>
    </div>

    <div class="form-group row">
        <label for="inputWater" class="col-sm-3 col-form-label">Water Consumed <span
                class="font-italic">(oz.)</span>:</label>
        <div class="col-sm-9">
            <input type="number" class="form-control" id="inputWater" placeholder="Water Consumed" min="0" max="128">
        </div>
    </div>

