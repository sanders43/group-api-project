<a href="/post/{{id}}:user?{{user_id}}" class="list-group-item list-group-item-action flex-column align-items-start">

    <div class="row d-flex w-100 justify-content-between">
        <h5 class="mb-1 font-weight-bold">Body Mass Index: {{bmi}}</h5>
        <small>{{format_date created_at}} by {{user.first_name}}</small>
    </div>

    <div class="row mt-2 mb-1">
        <div class="col-md-12">
            <p><i class="fas fa-weight"></i> Weight: {{weight}} lbs. {{#if systolic_blood_pressure}} | <i class="fas fa-stethoscope"></i>
                Blood
                Pressure: {{systolic_blood_pressure}}/{{diastolic_blood_pressure}} {{/if}} {{#if heart_rate}} | <i class="fas fa-heartbeat"></i>
                Heart
                Rate: {{heart_rate}} bpm {{/if}} {{#if exercise_duration}} | <i class="fas fa-stopwatch"></i> Exercise Duration:
                {{exercise_duration}} mins. {{/if}} {{#if exercise_type}} | <i class="fas fa-dumbbell"></i> Exercise Type: {{exercise_type}} {{/if}} {{#if water_consumed}} | <i
                    class="fas fa-tint"></i> Water Consumed: {{water_consumed}} oz.{{/if}} {{#if emoji_feeling}} | Emoji Feeling: {{emoji_feeling}} {{/if}}</p>
        </div>
    </div>
{{#if comments}}
    <div class="row mt-3">
        <div class="col-md-12">
            <p><span class=""><i class="fas fa-comments"></i> Comments: </span>{{comments}}</p>
        </div>
    </div>{{/if}}

</a>